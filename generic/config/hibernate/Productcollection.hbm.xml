<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<class 
    name="at.generic.eventmodel.ProductCollection" 
    table="productcollection"
>

    <composite-id name="comp_id" class="at.generic.eventmodel.ProductCollectionPK">
        <key-property 
            name="id" 
            column="id" 
            type="long"
            length="8"
        />
        <key-property 
            name="productId" 
            column="productid" 
            type="java.lang.String"
            length="255"
        />
    </composite-id>    

    <property
        name="amount"
        type="java.lang.String"
        column="amount"
        length="255"
    />

    <!-- Associations -->
    <!-- derived association(s) for compound key -->
    <!-- bi-directional many-to-one association to Orderreceivedevent -->
    <many-to-one
        name="orderreceivedevent"
	    class="at.generic.eventmodel.OrderReceivedEvent"
	    update="false"
	    insert="false"
	>
    	<column name="id" />
	</many-to-one>
	
    <!-- end of derived association(s) -->
  

</class>
</hibernate-mapping>
